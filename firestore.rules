rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ðŸŒŒ AGENTICUM G5 â€” SECURE TELEMETRY LAYER
    // Allow public read for demo/jury purposes on mission-critical telemetry.
    // Writes are strictly reserved for the Node.js Orchestrator (Admin SDK).

    match /perfect_twin_logs/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /competitor_intel/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /pmax_campaigns/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /system_config/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /senate_docket/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /campaigns/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /pillars/{docId} {
      allow read: if resource.data.visibility == 'public';
      allow write: if request.auth != null && 
                   request.resource.data.visibility is string && 
                   request.resource.data.visibility in ['public', 'internal'];
    }

    match /clusters/{docId} {
      allow read: if resource.data.visibility == 'public';
      allow write: if request.auth != null && 
                   request.resource.data.visibility is string && 
                   request.resource.data.visibility in ['public', 'internal'];
    }

    match /outputs/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /workflows/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Default: Secure by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
