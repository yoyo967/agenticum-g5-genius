rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ðŸŒŒ AGENTICUM G5 â€” SECURE TELEMETRY LAYER
    // Allow public read for demo/jury purposes on mission-critical telemetry.
    // Writes are strictly reserved for the Node.js Orchestrator (Admin SDK).

    match /perfect_twin_logs/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /competitor_intel/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /pmax_campaigns/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /system_config/{docId} {
      allow read: if true;
      allow write: if false;
    }

    match /senate_docket/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Default: Secure by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
